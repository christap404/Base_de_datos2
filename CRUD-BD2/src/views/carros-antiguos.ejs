</head>

<body>

    <% include ./nav %>
    <div class="container">
        
        <div class="row">

            <div class="col-12 " style="justify-content: center">
                <div class="card"  >
                    <form action="/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="Id" placeholder="Identificacion" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="Nombre" placeholder="Nombres" class="form-control">
                        </div>
                </div>
                <button type="submit" class="btn btn-primary" style="margin-left: 500px;" >
                    CONSULTAR
                </button>
                </form>
            </div>
        </div>

        <div class="col">
            <table>
                <table class="table table-borderer table-hover">
                    <thead>
                        <th>Placa</th>
                        <th>Marca</th>
                        <th>Modelo</th>
                        <th>Color</th>
                        <th>Precio</th>
      
                    </thead>
                    <tbody>

                        <% for(var i = 0; i < Rcarro.length; i++) { %>
                        <tr>
          
                            <td><%= Rcarro[i].id_placa %></td>
                            <td><%= Rcarro[i].marca %></td>
                            <td><%= Rcarro[i].modelo %></td>
                            <td><%= Rcarro[i].color %></td>
                            <td><%= Rcarro[i].precio %></td>
                      


                            <td>
                                <a href="/edit/<%=Rcarro[i].Id%>" class="btn btn-danger">EDIT</a>
                                <a href="/delete/<%=Rmodelo[i].Id%>" class="btn btn-danger">DELETE</a>
                            </td>

                            <% } %>
                        </tr> 

                    </tbody>
                </table>
            </table>


        </div>
    </div>
    </div>



</body>

</html>